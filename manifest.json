{
     "manifest_version": 3,
     "name": "Dark/Light Mode Toggle",
     "version": "1.1",
     "description": "Toggle between dark and light mode on any site.",
     "permissions": [
          "scripting",
          "activeTab"
     ],
     "action": {
          "default_popup": "popup.html",
          "default_icon": {
               "16": "icon.png"
          }
     },
     "background": {
          "service_worker": "background.js"
     },
     "icons": {
          "16": "icon.png"
     },
     "license": "MIT"
}